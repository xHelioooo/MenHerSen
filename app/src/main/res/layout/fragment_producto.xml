<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    android:id="@+id/contenedorFragmentProductos"
    tools:context="com.example.ihelioooo.login.Inicio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido al area de productos"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#fff"
            android:padding="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona la acciÃ³n que deseas realizar:"
            android:layout_gravity="left"
            android:gravity="left"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#fff"
            android:padding="15dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_IngresarProductos"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_style"
                android:clickable="true"
                android:text="Ingresar Productos"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:padding="20dp"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/btn_ModificarProductos"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_style"
                android:clickable="true"
                android:text="Modificar Productos"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:padding="20dp"
                android:layout_margin="5dp"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
